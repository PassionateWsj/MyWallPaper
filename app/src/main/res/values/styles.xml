<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主界面下方TabLinearLayout标题样式-->
    <!--<LinearLayout-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1"-->
    <!--android:gravity="center"-->
    <!--android:orientation="vertical">-->
    <style name="MainTabLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--主界面下方TabImg标题样式-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="2"-->
    <style name="MainTabImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
    </style>
    <!--主界面下方TabText标题样式-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"-->
    <style name="MainTabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">样式测试</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorTabText</item>
    </style>

    <!--设置TabLayout样式-->
    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTabChosen</item>
        <item name="tabIndicatorHeight">@dimen/design_mytab_tabIndicatorHeight</item>
        <item name="tabTextAppearance">@style/MyTabText</item>
        <item name="tabSelectedTextColor">@color/colorTabChosen</item>
    </style>
    <!--设置TabLayout样式-->
    <style name="MyTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/design_mytab_text_size</item>
        <item name="android:textColor">@color/colorTabText</item>
        <item name="textAllCaps">true</item>
    </style>

